<div class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{i18n "Name"}}:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control js-name-input" placeholder="{{i18n 'Name'}}" data-tie="value: name">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{i18n "Command"}}:</label>
        <div class="col-sm-10">
            <textarea rows="6" class="form-control command-input js-command-input" data-tie="value: command"></textarea>
        </div>
    </div>
    <h5 class="action-toggle-advanced clickable">
        <small><i class="fa" data-tie="class: advancedOptionsChevron"></i></small>
        {{i18n "Advanced"}}
    </h5>
    <div class="js-advanced" data-tie="visible: advancedOptionsExpanded">
        <div class="form-group">
            <label class="col-sm-2 control-label">{{i18n "Shell"}}:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control js-shell-input" placeholder="{{defaultShell}}" data-tie="value: shell">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">{{i18n "Timeout"}}:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control inline js-timeout-input" placeholder="{{defaultShell}}" data-tie="value: timeout" style="width: 5em">
                {{i18n "seconds"}}
            </div>
        </div>
    </div>
</div>
