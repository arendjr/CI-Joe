<h1 class="page-title">
    {{i18n "Campaigns"}} <i class="fa fa-angle-double-right"></i> <strong data-tie="text: name, default: {{i18n 'New campaign'}}"></strong>
</h1>
<div class="page-column-left">
    <label>{{i18n "Callsign"}}</label>
    <p><input type="text" class="form-control js-name-input" placeholder="{{i18n 'Enter name'}}" data-tie="value: name" autofocus></p>
    <div class="js-schedule mth"></div>
    <div class="js-workspace mth"></div>
</div>
<div class="page-column-right">
    <a class="action-add-phase pull-right">{{i18n "Add phase"}}<i class="fa fa-plus mhm"></i></a>
    <label>{{i18n "Phases"}}</label>
    <div class="js-phases"></div>
</div>
<hr class="clearfix page-section-separator">
<button class="btn btn-primary pull-right action-save">{{i18n "Save"}}</button>
<button class="btn pull-right mrs action-cancel">{{i18n "Cancel"}}</button>
