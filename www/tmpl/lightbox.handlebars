<div class="modal {{extraClass}}">
    <div class="modal-header">
        <h3>{{title}}{{{extraTitleHtml}}}</h3>
        {{#if headerButtons}}
        <div class="btn-toolbar js-button-bar"></div>
        {{/if}}
        {{{extraHeaderHtml}}}
    </div>
    {{#if customBody}}
    <div class="js-content"></div>
    {{else}}
    <div class="modal-body">
        <div class="row-fluid js-content"></div>
    </div>
    {{/if}}
    {{#if footerButtons}}
    <div class="modal-footer">
        <div class="btn-toolbar pull-right js-button-bar"></div>
    </div>
    {{/if}}
</div>
