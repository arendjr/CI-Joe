<tr class="clickable action-mission" data-mission-id="{{id}}">
    <td class="status-indicator" data-tie="class: statusClass">
        <i class="fa fa-dot-circle-o" data-tie="visible: !isRunning"></i>
        <i class="fa fa-spin fa-spinner" data-tie="visible: isRunning"></i>
    </td>
    <td>
        {{#if campaignName}}{{campaignName}} <i class="fa fa-angle-double-right"></i>{{/if}}
        <span data-tie="text: name"></span>
    </td>
    <td data-tie="attr[data-timestamp]: lastSuccess"></td>
    <td data-tie="attr[data-timestamp]: lastFailure"></td>
    <td>
        <a class="action-stop icon icon-stop" data-tie="visible: isQueued" title="{{i18n 'Stop'}}"></a>
        <a class="action-stop icon icon-stop" data-tie="visible: isRunning" title="{{i18n 'Stop'}}"></a>
        <a class="action-start icon icon-play" data-tie="visible: isStopped" title="{{i18n 'Run'}}"></a>
        <a class="action-edit icon icon-edit" title="{{i18n 'Edit'}}"></a>
        {{#if standalone}}
        <a class="action-remove icon icon-trash" title="{{i18n 'Remove'}}"></a>
        {{/if}}
    </td>
</tr>
