<tr class="clickable action-mission" data-mission-id="{{id}}">
    <td>
        <span class="js-no-hover">
            <i class="glyphicon glyphicon-time" data-tie="visible: isQueued"></i>
            <i class="glyphicon glyphicon-record" data-tie="visible: isRunning"></i>
            <i class="glyphicon glyphicon-play-circle" data-tie="visible: isStopped"></i>
        </span>
        <span class="js-hover" style="display: none">
            <a class="action-stop-mission"><i class="glyphicon glyphicon-remove-circle" data-tie="visible: isQueued"></i></a>
            <a class="action-stop-mission"><i class="glyphicon glyphicon-remove-circle" data-tie="visible: isRunning"></i></a>
            <a class="action-start-mission"><i class="glyphicon glyphicon-play-circle" data-tie="visible: isStopped"></i></a>
        </span>
    </td>
    <td data-tie="text: name"></td>
    <td><span class="label" data-tie="class: lastJobStatusLabelClass, text: lastJobStatusLabelText"></span></td>
</tr>
