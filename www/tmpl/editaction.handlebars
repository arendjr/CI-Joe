<div class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{i18n "Description"}}:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="{{i18n 'Description'}}" data-tie="value: description">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{i18n "Command"}}:</label>
        <div class="col-sm-10">
            <textarea rows="6" class="form-control command-input" placeholder="{{defaultShell}}" data-tie="value: command"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{i18n "Timeout"}}:</label>
        <div class="col-sm-2">
            <input type="number" class="form-control" data-tie="value: timeout">
        </div>
        <div class="col-sm-1 control-label">
            {{i18n "seconds"}}
        </div>
    </div>
</div>
